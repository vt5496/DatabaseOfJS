const arrayToList = arr => {
    let i = 0;
    let list = {};
    const recursion = (list) => {
        if (i > arr.length-2) {
            list.value = arr[i];
            list.rest = null;
        } else {
            list.value = arr[i];
            list.rest = {};
            i++;
            recursion(list.rest)
        }
    }
    recursion(list)
    return list;
}

 console.log(arrayToList([0,1,2,3]))